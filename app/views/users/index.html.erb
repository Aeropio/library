<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Middle name</th>
      <th>Driver license</th>
      <th>Library card</th>
      <th>Home address</th>
      <th>Unit number</th>
      <th>City</th>
      <th>Zip</th>
      <th>Phone number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.middle_name %></td>
        <td><%= user.driver_license %></td>
        <td><%= user.library_card_id %></td>
        <td><%= user.home_address %></td>
        <td><%= user.unit_number %></td>
        <td><%= user.city %></td>
        <td><%= user.zip %></td>
        <td><%= user.phone_number %></td>
        <td>
          <form>
            <%= link_to "Approve", approve_user_path(email: user.email) %>
          </form>
        </td>
         <td>
          <form>
            <%= link_to "Reject", reject_user_path(email: user.email) %>
          </form>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<form>
  <%= link_to "Logout", destroy_admin_session_path %>
</form>

<br>