<h2 class="H1 text-center pb-3">Admin Login </h2>
<div class="login-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <label for="exampleInputEmail1">Username</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Username", class: "form-control"%>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Password</label>
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
  </div>

  <div class="form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">Remember Me</label>
  </div>

  <div class="py-3">
    <input type="submit" name="submit" value="Login" class="btn btn-primary blue-button btn-block">
  </div>


  <div class="py-2 text-center">

    <a href="/admins/password/new">forgot password?</a>
  </div>
  <% end %>
</div>